<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity">

    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/bluetooth"
        android:key="switch_bt"
        android:title="@string/pref_conn_bluetooth" />
    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/wifi"
        android:key="switch_wifi"
        android:onClick="onSwitchWifiClicked"
        android:title="@string/pref_conn_wifi" />
    <Preference
        android:key="textbt"
        android:title="@string/text_conn_bluetooth" />
    <Preference
        android:key="textwifi"
        android:title="@string/text_conn_wifi"></Preference>
</PreferenceScreen>